{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**/*.ts",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "typecheck": {
      "inputs": [
        "src/**/*.ts",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [],
      "dependsOn": [
        "^typecheck",
        "^build"
      ]
    },
    "lint": {
      "inputs": [
        "src/**/*.ts"
      ]
    },
    "lint:check": {
      "inputs": [
        "src/**/*.ts"
      ]
    },
    "test": {
      "dependsOn": ["typecheck", "^test"],
      "inputs": ["src/**/*.test.ts"],
      "outputMode": "errors-only"
    },
    "test:coverage": {
      "dependsOn": ["^typecheck", "^test"],
      "inputs": ["src/**/*.test.ts"],
      "outputMode": "errors-only"
    },
    "//#test:coverage": {
      "inputs": ["apps/**/src/**/*.ts", "packages/**/src/**/*.ts", "load_tests/**/src/**/*.ts"],
      "outputs": ["coverage"],
      "outputMode": "errors-only"
    }
  }
}
