{
  "name": "trial-system",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "code-review": "turbo run typecheck lint:check test //#test:coverage",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "version": "changeset version",
    "release": "changeset tag"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.11",
    "turbo": "^1.13.3"
  }
}
